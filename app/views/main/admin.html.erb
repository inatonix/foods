<% provide(:title, 'Sign up') %>
<h1>Create Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :date %>
      <%= f.date_field :date %>

      <%= f.label :available %>
      <%= f.check_box :available %>


      <%= f.submit "Create Event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
