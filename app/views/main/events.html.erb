<head>
  <%= stylesheet_link_tag   'my_styles/events', media: 'all',
                               'data-turbolinks-track': 'reload' %>
</head>

<body>
  <h1>Events</h1>
  <h2>New</h2>
  <div class="box">
    <% @new.each do |event| %>
    <div class="item">
      <%= event.name %>
      <%= event.date %>
      <%= image_tag event.image %>
    </div>
  <% end %>
  </div>

  <h2>Previous</h2>
  <div class="box">
    <% @previous.first(10).each do |event| %>
    <div class="item">
      <%= event.name %>
      <%= event.date %>
      <%= image_tag event.image %>
    </div>
  <% end %>
  </div>


</body>
